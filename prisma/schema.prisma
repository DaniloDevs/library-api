generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id           String         @id @default(uuid())
  name         String
  username     String         @unique
  email        String         @unique
  password     String
  reservations Reservations[]

  @@map("user")
}

model Reservations {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  expiresAt DateTime
  status    String // "ACTIVE", "RETURNED", "CANCELLED"
  usersId   String?
  booksId   String?
  Books     Books?   @relation(fields: [booksId], references: [id])
  Users     Users?   @relation(fields: [usersId], references: [id])

  @@map("reserved")
}

model Books {
  id           String         @id @default(uuid())
  title        String         @unique
  slug         String         @unique
  ISBN         String         @unique
  rating       Int
  reserved     Boolean        @default(false)
  authorsId    String
  status       String // RESERVED - AVAILABLE
  categorysId  String
  reservations Reservations[]

  author   Authors   @relation(fields: [authorsId], references: [id])
  category Categorys @relation(fields: [categorysId], references: [id])

  @@map("book")
}

model Authors {
  id    String  @id @default(uuid())
  name  String  @unique
  slug  String  @unique
  Books Books[]

  @@map("author")
}

model Categorys {
  id    String  @id @default(uuid())
  name  String  @unique
  slug  String  @unique
  Books Books[]

  @@map("category")
}
