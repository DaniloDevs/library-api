generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Books {
  id        String      @id @default(uuid())
  title     String      @unique
  slug      String      @unique
  author    String
  category  String
  ISBN      String      @unique
  rating    Int
  reserved  Boolean     @default(false)
  isValid   Boolean     @default(true)

  @@map("book")
}

model Authors {
  id   String @id @default(uuid())
  name String @unique
  slug String

  @@map("author")
}

model Categorys {
  id   String @id @default(uuid())
  name String @unique
  slug String

  @@map("category")
}
