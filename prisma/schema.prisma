generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id       String @id @default(uuid())
  name     String
  username String @unique
  email    String @unique
  password String

  @@map("user")
}

model Books {
  id       String  @id @default(uuid())
  title    String  @unique
  slug     String  @unique
  ISBN     String  @unique
  rating   Int
  reserved Boolean @default(false)

  author      Authors   @relation(fields: [authorsId], references: [id])
  category    Categorys @relation(fields: [categorysId], references: [id])
  authorsId   String
  categorysId String

  @@map("book")
}

model Authors {
  id    String  @id @default(uuid())
  name  String  @unique
  slug  String  @unique
  Books Books[]

  @@map("author")
}

model Categorys {
  id    String  @id @default(uuid())
  name  String  @unique
  slug  String  @unique
  Books Books[]

  @@map("category")
}
